<!doctype html>
<html lang="{{ config.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ title }}</title>
    <meta name="description" content="{{ description or site.description }}">

    <link rel="stylesheet" href="{{ '/theme.css' | url }}">
    <link rel="icon" type="image/png" href="/_images/favicon.png" sizes="32x32">

    {% if layout === 'post.njk' or layout === 'post-minimal.njk' %}
      <meta property="og:site_name" content="{{config.title}}"/>
      <meta property="og:type" content="article"/>
      <meta name="twitter:card" content="summary"/>
      <meta property="og:title" content="{{ title }} - {{config.title}}"/>
      <meta property="og:description" content="{{ description }}"/>
      {% if permalink %}
        <meta property="og:url" content="{{config.url}}{{ permalink }}"/>
      {% else %}
        <meta property="og:url" content="{{config.url}}{{ page.filePathStem }}/"/>
      {% endif %}

      {% if featuredImage !== undefined %}
        <meta property="og:image" content="{{config.url}}{{featuredImage}}"/>
      {% else %}
        <meta property="og:image" content="{{config.url}}/_images/default.jpg"/>
      {% endif %}

    {% endif %}

    {# {% set css %}
      {% include "custom.css" %}
    {% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style> #}
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6344809456642000"
     crossorigin="anonymous"></script>
  </head>
  